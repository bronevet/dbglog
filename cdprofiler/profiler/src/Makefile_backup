CC=mpic++
CFLAGS=-c -Wall -std=gnu++11 
LDFLAGS=
SOURCES= $(wildcard *.cc)
OBJECTS=$(SOURCES:.cc=.o)
LIBOUTPUT=../lib/libcd.a

all: $(SOURCES) $(LIBOUTPUT)

$(LIBOUTPUT): $(OBJECTS) 
	 #$(CC) $(LDFLAGS) $(OBJECTS) -o $@
	 ar -cr $@ $(OBJECTS) 
.cc.o:
	 $(CC) $(CFLAGS) -c $< -o $@

clean:
	rm $(LIBOUTPUT) $(OBJECTS)

