all: meshFile2Socket glvis

meshFile2Socket: meshFile2Socket.cpp mfem/mfem.hpp 
	g++ meshFile2Socket.cpp -Imfem -Lmfem -lmfem -I${ROOT_PATH} -L${ROOT_PATH} -ldbglog -DROOT_PATH=${ROOT_PATH} -o meshFile2Socket

glvis:
#	cd glvis; make ROOT_PATH=${ROOT_PATH}
	wget --no-check-certificate https://glvis.googlecode.com/files/glvis-2.0.tgz 
	tar -xf glvis-2.0.tgz
	rm glvis-2.0.tgz
	cp glvismakefile glvis-2.0/makefile
	cd glvis-2.0; make
	mv glvis-2.0 glvis

clean:
	rm -rf glvis
#	cd glvis; make clean
