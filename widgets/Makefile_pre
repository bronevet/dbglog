WIDGETS_COMMON_O := scope_common.o graph_common.o valSelector_common.o trace_common.o module_common.o
WIDGETS_COMMON_H := scope_common.h graph_common.h valSelector_common.h trace_common.h module_common.h
WIDGETS_STRUCTURE_O := scope_structure.o graph_structure.o valSelector_structure.o trace_structure.o module_structure.o
WIDGETS_STRUCTURE_H := scope_structure.h graph_structure.h valSelector_structure.h trace_structure.h module_structure.h
WIDGETS_LAYOUT_O := scope_layout.o graph_layout.o valSelector_layout.o trace_layout.o module_layout.o
WIDGETS_LAYOUT_H := scope_layout.h graph_layout.h valSelector_layout.h trace_layout.h module_layout.h
WIDGETS := ${WIDGETS_O} ${WIDGETS_H}

all: ${WIDGETS_COMMON_O} ${WIDGETS_COMMON_H} ${WIDGETS_STRUCTURE_O} ${WIDGETS_STRUCTURE_H} ${WIDGETS_LAYOUT_O} ${WIDGETS_LAYOUT_H}  \
     shellinabox/bin/shellinaboxd${EXE} mongoose/mongoose${EXE} graphviz/bin/dot${EXE} \
     ID3-Decision-Tree \
     xdotool \
     noVNC \
     external_scripts
	chmod 755 canviz-0.1 
	chmod 644 canviz-0.1/*
	chmod 755 canviz-0.1/excanvas canviz-0.1/lib canviz-0.1/path canviz-0.1/prototype
	chmod 644 canviz-0.1/*/*

scope_common.o: scope_common.C scope_common.h ../attributes_common.h ../sight_common.h
	g++ ${SIGHT_CFLAGS} scope_common.C -I.. -DROOT_PATH="\"${ROOT_PATH}\"" -DREMOTE_ENABLED=${REMOTE_ENABLED} -DGDB_PORT=${GDB_PORT} -c -o scope_common.o

scope_structure.o: scope_structure.C scope_structure.h ../attributes_structure.h ../sight_structure.h
	g++ ${SIGHT_CFLAGS} scope_structure.C -I.. -DROOT_PATH="\"${ROOT_PATH}\"" -DREMOTE_ENABLED=${REMOTE_ENABLED} -DGDB_PORT=${GDB_PORT} -c -o scope_structure.o

scope_layout.o: scope_layout.C scope_layout.h ../attributes_layout.h ../sight_layout.h
	g++ ${SIGHT_CFLAGS} scope_layout.C -I.. -DROOT_PATH="\"${ROOT_PATH}\"" -DREMOTE_ENABLED=${REMOTE_ENABLED} -DGDB_PORT=${GDB_PORT} -c -o scope_layout.o


graph_common.o: graph_common.C graph_common.h ../attributes_common.h ../sight_common.h
	g++ ${SIGHT_CFLAGS} graph_common.C -I.. -DROOT_PATH="\"${ROOT_PATH}\"" -DREMOTE_ENABLED=${REMOTE_ENABLED} -DGDB_PORT=${GDB_PORT} -c -o graph_common.o

graph_structure.o: graph_structure.C graph_structure.h ../attributes_structure.h ../sight_structure.h
	g++ ${SIGHT_CFLAGS} graph_structure.C -I.. -DROOT_PATH="\"${ROOT_PATH}\"" -DREMOTE_ENABLED=${REMOTE_ENABLED} -DGDB_PORT=${GDB_PORT} -c -o graph_structure.o

graph_layout.o: graph_layout.C graph_layout.h ../attributes_layout.h ../sight_layout.h
	g++ ${SIGHT_CFLAGS} graph_layout.C -I.. -DROOT_PATH="\"${ROOT_PATH}\"" -DREMOTE_ENABLED=${REMOTE_ENABLED} -DGDB_PORT=${GDB_PORT} -c -o graph_layout.o


valSelector_common.o: valSelector_common.C valSelector_common.h ../sight_common.h
	g++ ${SIGHT_CFLAGS} valSelector_common.C -I.. -DROOT_PATH="\"${ROOT_PATH}\"" -DREMOTE_ENABLED=${REMOTE_ENABLED} -DGDB_PORT=${GDB_PORT} -c -o valSelector_common.o

valSelector_structure.o: valSelector_structure.C valSelector_structure.h ../sight_structure.h
