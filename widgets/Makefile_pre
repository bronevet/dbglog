	g++ ${SIGHT_CFLAGS} graph/graph_structure.C -I.. -DROOT_PATH="\"${ROOT_PATH}\"" -DREMOTE_ENABLED=${REMOTE_ENABLED} -DGDB_PORT=${GDB_PORT} -c -o graph/graph_structure.o

graph/graph_layout.o: graph/graph_layout.C graph/graph_layout.h ../attributes/attributes_layout.h ../sight_layout.h
	g++ ${SIGHT_CFLAGS} graph/graph_layout.C -I.. -DROOT_PATH="\"${ROOT_PATH}\"" -DREMOTE_ENABLED=${REMOTE_ENABLED} -DGDB_PORT=${GDB_PORT} -c -o graph/graph_layout.o


