	g++ ${SIGHT_CFLAGS} valSelector/valSelector_common.C -I.. -DROOT_PATH="\"${ROOT_PATH}\"" -DREMOTE_ENABLED=${REMOTE_ENABLED} -DGDB_PORT=${GDB_PORT} -c -o valSelector/valSelector_common.o

